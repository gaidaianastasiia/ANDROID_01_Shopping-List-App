<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenTitleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShowCreateListDialogButton">
        <item name="tint">@color/white</item>
    </style>

    <style name="ListItemNameTextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListNameDialogTitleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListNameEditText">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ListControls">
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">40dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ShowCreateProductDialogButton">
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>

    <style name="ActiveProductsRecyclerView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="InactiveProductsRecyclerView">
        <item name="android:background">@color/grey_200</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="AddProductAmountButton">
        <item name="backgroundTint">@color/grey_200</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@drawable/product_input_buttons_text_color</item>
    </style>

    <style name="AddProductButton">
        <item name="backgroundTint">@color/grey_200</item>
        <item name="tint">@color/purple_500</item>
    </style>

    <style name="ActiveProductNameTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingEnd">7dp</item>
    </style>

    <style name="ProductAmountTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InactiveProductNameTextView">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingEnd">7dp</item>
    </style>

    <style name="InactiveProductAmountTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>